<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:fresco="http://schemas.android.com/apk/res-auto"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
    <RelativeLayout
        android:id="@id/rell"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/menu_right__item_selector">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@id/scenery_image"
            android:layout_width="90.0dip"
            android:layout_height="80.0dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10.0dip"
            android:layout_marginLeft="10.0dip"
            android:layout_marginTop="15.0dip"
            android:gravity="center_vertical"
            android:scaleType="centerCrop"
            fresco:placeholderImage="@drawable/default_img2"/>
        <RelativeLayout android:id="@id/layout"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8.0dip"
                        android:layout_marginTop="10.0dip"
                        android:layout_toRightOf="@id/scenery_image"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
            <TextView android:id="@id/scenery_name"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:ellipsize="end"
                      android:maxEms="12"
                      android:singleLine="true"
                      android:textColor="#ff3e4041"
                      android:textSize="16.0sp"/>
        </RelativeLayout>
        <RelativeLayout android:id="@id/scenery_levelLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/layout"
                        android:layout_marginLeft="5.0dip"
                        android:layout_marginTop="7.0dip"
                        android:layout_toRightOf="@id/scenery_image"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
            <TextView android:id="@id/scenery_level"
                      android:layout_width="150.0dip"
                      android:layout_height="wrap_content"
                      android:layout_alignParentLeft="true"
                      android:layout_centerVertical="true"
                      android:layout_gravity="center_vertical"
                      android:layout_marginLeft="5.0dip"
                      android:ellipsize="end"
                      android:textColor="@color/gray"
                      android:textSize="13.0sp"/>
            <ImageView android:id="@id/button"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_alignParentRight="true"
                       android:layout_centerVertical="true"
                       android:layout_marginRight="10.0dip"
                       android:clickable="true"
                       android:gravity="center_vertical"
                       android:padding="8.0dip"
                       android:src="@drawable/yuyin"/>
        </RelativeLayout>
        <RelativeLayout android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/scenery_levelLayout"
                        android:layout_marginLeft="7.0dip"
                        android:layout_marginTop="7.0dip"
                        android:layout_toRightOf="@id/scenery_image">
            <TextView android:id="@id/scenery_introduction"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_alignParentLeft="true"
                      android:layout_marginRight="12.0dip"
                      android:ellipsize="end"
                      android:maxEms="20"
                      android:singleLine="true"
                      android:textColor="#ff6e6e6e"
                      android:textSize="13.0sp"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>