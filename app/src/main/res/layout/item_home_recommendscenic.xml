<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:fresco="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sceneryImage"
        android:layout_width="match_parent"
        android:layout_height="170.0dip"
        fresco:actualImageScaleType="centerCrop"
        fresco:placeholderImage="@drawable/default_img"/>

    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:padding="21.0dip">
        <TextView android:id="@id/sceneryName"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="惠州西湖"
                  android:textSize="16.0sp"/>
        <TextView android:id="@id/sceneryDes"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:layout_alignParentRight="true"
                  android:layout_centerVertical="true"
                  android:layout_marginTop="10.0dip"
                  android:ellipsize="end"
                  android:maxLines="2"
                  android:text="惠州西湖是位于广东省惠州市境内的一个城市潜水湖泊，中国国家，风景优美，常年是旅游胜地"
                  android:textSize="14.0sp"/>
    </LinearLayout>
    <View style="@style/home_divider_horizontal"/>
</LinearLayout>