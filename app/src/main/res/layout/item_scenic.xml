<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:fresco="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="10dp">


    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sceneryImage"
        android:layout_width="80.0dip"
        android:layout_height="80.0dip"
        android:layout_alignParentLeft="true"
        android:scaleType="centerCrop"
        fresco:placeholderImage="@drawable/default_img2"
        fresco:roundedCornerRadius="4dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="80.0dip"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/sceneryImage"
        android:orientation="vertical">
        <TextView
            android:id="@+id/sceneryName"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="北京石景山游乐园"
            android:textColor="@color/black"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/sceneryDes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:text="城市要发展，“生命至上、安全第一”是一条红线，是时时刻刻要绷紧的一根弦。"
            android:textColor="@color/gray"
            android:textSize="13sp"/>

    </LinearLayout>


</RelativeLayout>