<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="88dp"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <ImageView
        android:id="@+id/actionIV"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:src="@drawable/homeactivity_sceniclive"
    />

    <TextView
        android:id="@+id/titTV"
        android:layout_width="90dp"
        android:layout_height="44dp"
        android:layout_toRightOf="@+id/actionIV"
        android:gravity="center|bottom"
        android:paddingBottom="3dp"
        android:text="景区直播"
        android:textColor="#ff4a3f38"
        android:textSize="14.0sp"/>

    <TextView
        android:id="@+id/desTV"
        android:layout_width="90dp"
        android:layout_height="44dp"
        android:layout_marginTop="44.0dip"
        android:layout_toRightOf="@+id/actionIV"
        android:gravity="center|top"
        android:paddingTop="3dp"
        android:text="在家实时看风景"
        android:textColor="#ff3f3b33"
        android:textSize="11.0sp"
        android:visibility="visible"/>


</RelativeLayout>
