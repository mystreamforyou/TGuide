                    android:background="@color/white" android:gravity="center_vertical">
        <TextView android:id="@+id/search_tv" android:layout_width="fill_parent"
                  android:layout_height="fill_parent" android:layout_marginBottom="@dimen/six"
                  android:layout_marginLeft="8.0dip" android:layout_marginRight="8.0dip"
                  android:layout_marginTop="@dimen/six"
