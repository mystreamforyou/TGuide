                  android:paddingLeft="10.0dip" android:paddingRight="10.0dip">
        <ImageView android:id="@id/right_imageview" android:layout_width="28.0dip"
                   android:layout_height="28.0dip" android:visibility="gone"/>
        <ImageView android:id="@id/right_finish" android:layout_width="28.0dip"
                   android:layout_height="28.0dip" android:visibility="gone"/>
    </LinearLayout>
</RelativeLayout>