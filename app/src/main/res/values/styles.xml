<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="StartTheme" parent="AppTheme">
        <item name="android:windowBackground">@mipmap/splash</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- 底部Tab按钮样式 -->
    <style name="tab_style">
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="home_separat_horizontal">
        <item name="android:background">#fff3f4f8</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">11.0dip</item>
    </style>

    <style name="home_divider_horizontal">
        <item name="android:background">#ffe5e5e5</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0.5dip</item>
    </style>

    <style name="home_menu">
        <item name="android:textSize">@dimen/textsize_thirteen</item>
        <item name="android:textColor">@color/solid_black</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">@dimen/nine</item>
    </style>

    <style name="home_divider_horizontal_new">
        <item name="android:background">#ffd4d4d4</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0.5dip</item>
    </style>

    <style name="home_divider_vertical_new">
        <item name="android:background">#ffd4d4d4</item>
        <item name="android:layout_width">0.5dip</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="mine_item">
        <item name="android:textSize">15.0sp</item>
        <item name="android:textColor">@color/mine_item</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/menu_right__item_selector</item>
        <item name="android:paddingLeft">13.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">50.0dip</item>
        <item name="android:drawablePadding">13.0dip</item>
    </style>

    <style name="city_item_bar">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">#ff999999</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/comm_new_bg</item>
        <item name="android:paddingLeft">15.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">26.0dip</item>
    </style>

    <style name="item_img_text_arr">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45.0dip</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:padding">10.0dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="item_text_exp">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/vacation_filter_bg_pressed</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10.0dip</item>
        <item name="android:lineSpacingExtra">7dip</item>
        <item name="android:maxLines">4</item>
        <item name="android:background">@color/white</item>
    </style>

</resources>
